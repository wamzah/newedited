<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"    
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="@drawable/drawable_border1"    
    
    tools:context="com.example.docdig.DashboardActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="600dp"
        android:layout_height="55dp"
        android:layout_x="-44dp"
        android:layout_y="-6dp"
        android:background="@drawable/text" />

    <ImageView
        android:id="@+id/main"
        android:layout_width="150dp"
        android:layout_height="64dp"
        android:layout_x="5dp"
        android:layout_y="-4dp"
        android:src="@drawable/main" />

    
    
    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="421dp"
        android:layout_x="0dp"
        android:layout_y="52dp"
        android:background="@layout/dashboard_view" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="180dp"
            android:layout_height="37dp"
            android:layout_x="145dp"
            android:layout_y="280dp"
            android:text="     Search by Time"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3391E7"
            android:textSize="17dp"
            android:typeface="sans" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="180dp"
        android:layout_height="37dp"
        android:layout_x="145dp"
        android:layout_y="400dp"
        android:text="     Search by Specialty"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#3391E7"
        android:textSize="17dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="180dp"
        android:layout_height="37dp"
        android:layout_x="145dp"
        android:layout_y="160dp"
        android:text="     Search by Doctor"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#3391E7"
        android:textSize="17dp"
        android:typeface="sans" />


    <Button
        android:id="@+id/buttonDoctor"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_x="150dp"
        android:layout_y="80dp"
        android:background="@drawable/doctor" />

    <Button
        android:id="@+id/buttonHosp"
         android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_x="150dp"
        android:layout_y="320dp"
       android:background="@drawable/shosp"/>

    <Button
        android:id="@+id/buttontime"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_x="150dp"
        android:layout_y="200dp"
        android:background="@drawable/timer" />

</AbsoluteLayout>
